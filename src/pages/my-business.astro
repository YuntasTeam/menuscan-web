---

<Layout title="My Business | MenuScan">
  <div class="container mx-auto px-4">
    <h1 class="text-3xl font-bold mt-4 mb-6">My Business</h1>

    <Banner businessName={businessName} bannerImage={bannerImage} />

    <div class="flex flex-col md:flex-row gap-6 mt-8">
      <div class="w-full md:w-2/3">
        <PromotionsCarousel promotions={promotions} client:load />
      </div>
      <div class="w-full md:w-1/3">
        <MostSoldProduct product={mostSoldProduct} />
      </div>
    </div>

    <div class="mt-12">
      <h2 class="text-2xl font-semibold mb-4">Our Menus</h2>
      <MenuCarousel menus={menus} client:load />
    </div>

    <div class="mt-12">
      <h2 class="text-2xl font-semibold mb-4">Our Products</h2>
      <ProductGrid products={products} client:load/>
    </div>
  </div>
</Layout>
